<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<!-- Vanilla Archotech -->
	
	<Operation Class="PatchOperationFindMod">
		
    	<mods>
        	<li>Elite Bionics Framework</li>
    	</mods>
		
    	<match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/HediffDef[defName = "FSFArchotechPowerCore"]</xpath>
				<value>
					<comps>
        				<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            				<scaleAdjustment>1.0</scaleAdjustment>
        				</li>
    				</comps>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/HediffDef[defName = "FSFArchotechSkinI"]</xpath>
				<value>
					<comps>
        				<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            				<scaleAdjustment>1.0</scaleAdjustment>
        				</li>
    				</comps>
				</value>
			</li>
			
        </operations>
    	</match>
		
	</Operation>
	
</Patch>