<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<!-- Vanilla Archotech -->
	
	<Operation Class="PatchOperationFindMod">
		
    	<mods>
        	<li>Dubs Bad Hygiene</li>
    	</mods>
		
    	<match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/HediffDef[defName = "FSFArchotechPowerCore"]/stages/li</xpath>
				<value>
						<statOffsets>
							<ThirstRateMultiplier>-3.0</ThirstRateMultiplier>
						</statOffsets>
				</value>
			</li>
			
        </operations>
    	</match>
		
	</Operation>
	
</Patch>