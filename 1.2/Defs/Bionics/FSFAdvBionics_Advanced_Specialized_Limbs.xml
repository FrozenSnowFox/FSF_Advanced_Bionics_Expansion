			<Plasteel>60</Plasteel>
			<ComponentSpacer>16</ComponentSpacer>
		</costList>
		<recipeMaker>
			<researchPrerequisite>FSFAdvancedSpecializedLimbs</researchPrerequisite>
		</recipeMaker>
		<statBases>
			<Mass>10</Mass>
