<?xml version="1.0" encoding="utf-8"?>

<Patch>
	
  	<!-- Fix Stack Colours -->
	
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "VFEU_EmptyCorticalStack"]</xpath>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name = "VFEU_StackBase"]/graphicData</xpath>
				<value>
					<color>(144,98,179)</color>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name = "AC_ArchoStackBase"]/graphicData</xpath>
				<value>
					<color>(82,190,128)</color>
				</value>
			</li>
			
		</operations>
	</Operation>
	
</Patch>