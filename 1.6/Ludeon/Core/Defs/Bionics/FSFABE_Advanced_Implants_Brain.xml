	<RecipeDef ParentName="SurgeryInstallImplantBase">
		<defName>InstallFSFImplantBrainAddiction</defName>
		<label>install addiction assistant</label>
		<description>Install a addiction assistant.</description>
		<descriptionHyperlinks>
			<ThingDef>FSFImplantBrainAddiction</ThingDef>
