		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>FSFImplantBrainAddiction</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>FSFImplantBrainAddiction</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Brain</li>
		</appliedOnFixedBodyParts>
		<addsHediff>FSFImplantBrainAddiction</addsHediff>
		<uiIconThing>FSFImplantBrainAddiction</uiIconThing>
	</RecipeDef>
	
