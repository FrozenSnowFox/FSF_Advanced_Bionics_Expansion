<?xml version="1.0" encoding="utf-8"?>

<Patch>
	
  	<!-- Add Light Sensitivity Multiplier To Thoughts -->
	
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThoughtDef[defName = "Darklight_Preferred_BlindingLight"]</xpath>
				<value>
					<effectMultiplyingStat>FSFABELightSensitivity</effectMultiplyingStat>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThoughtDef[defName = "Darklight_Preferred_IndoorLight"]</xpath>
				<value>
					<effectMultiplyingStat>FSFABELightSensitivity</effectMultiplyingStat>
				</value>
			</li>
			
		</operations>
	</Operation>
	
</Patch>