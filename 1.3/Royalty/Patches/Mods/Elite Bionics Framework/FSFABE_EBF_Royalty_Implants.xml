<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<!-- Royalty Bionics -->
	
	<Operation Class="PatchOperationFindMod">
		
    	<mods>
        	<li>Elite Bionics Framework</li>
    	</mods>
		
    	<match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/HediffDef[defName = "ToughskinGland"]</xpath>
				<value>
					<comps>
        				<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            				<scaleAdjustment>0.15</scaleAdjustment>
        				</li>
					</comps>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/HediffDef[defName = "ArmorskinGland"]</xpath>
				<value>
					<comps>
        				<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            				<scaleAdjustment>0.25</scaleAdjustment>
        				</li>
					</comps>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/HediffDef[defName = "StoneskinGland"]</xpath>
				<value>
					<comps>
        				<li Class="EBF.Hediffs.HediffCompProperties_MaxHPAdjust">
            				<scaleAdjustment>0.5</scaleAdjustment>
        				</li>
					</comps>
				</value>
			</li>
			
        </operations>
    	</match>
	
	</Operation>
	
</Patch>